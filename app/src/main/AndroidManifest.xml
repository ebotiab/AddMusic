<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.addmusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WesternMusicActivity"
            android:label="@string/western"/>
        <activity
            android:name=".ThrillerMusicActivity"
            android:label="@string/thriller"/>
        <activity android:name=".HappyMusicActivity"
            android:label="@string/happy"/>
        <activity android:name=".RomanticMusicActivity"
            android:label="@string/romantic"/>
        <activity android:name=".HorrorMusicActivity"
            android:label="@string/horror"/>
        <activity android:name=".DramaMusicActivity"
            android:label="@string/drama"/>
        <activity android:name=".ComedyMusicActivity"
            android:label="@string/comedy"/>
        <activity android:name=".ActionMusicActivity"
            android:label="@string/action"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>